<div class="docs-content d-flex flex-column flex-column-fluid" id="kt_docs_content">
    <div class="container" id="kt_docs_content_container">
        <div class="card mb-2">
            <div class="card-body fs-6 py-15 px-10 py-lg-15 px-lg-15">
                <form class="form" action="/create_task" method="post" id="create-task" enctype="multipart/form-data">

                    <div class="mb-5">
                        <label for="exampleFormControlInput1" class="required form-label">Select a portal for
                            mailing</label>
                        <select class="form-control form-control-solid" name="portal" id="portal" placeholder="Portal"
                                required>
                            <option value="" selected>Choose portal</option>
                            {{#each portals }}
                                <option value="{{ id }}">{{ alias }}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="mb-5">
                        <label for="exampleFormControlInput1" class="required form-label">Landing page link</label>
                        <input type="text" class="form-control form-control-solid" name="target_link" id="target_link"
                               placeholder="Link" required/>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-6 ">
                            <label for="exampleFormControlInput1" class="form-label">Input Username</label>
                            <input type="email" class="form-control form-control-solid" name="user_name" id="user_name"
                                   placeholder="Username"/>
                        </div>

                        <div class="col-md-6 ">
                            <label for="exampleFormControlInput1" class="form-label">Input Lastname</label>
                            <input type="email" class="form-control form-control-solid" name="last_name" id="last_name"
                                   placeholder="Lastname"/>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-6 ">
                            <label for="exampleFormControlInput1" class="form-label">Input E-mail</label>
                            <input type="email" class="form-control form-control-solid" name="email" id="email"
                                   placeholder="E-mail"/>
                        </div>
                        <div class="col-md-6 ">
                            <label for="exampleFormControlInput1" class="form-label">Input password</label>
                            <input type="email" class="form-control form-control-solid" name="password" id="password"
                                   placeholder="Password"/>
                        </div>
                    </div>

                    <div class="mb-5">
                        <label for="exampleFormControlInput1" class="required form-label">Choose file</label>
                        <input type="file" class="form-control form-control-solid" name="file" id="file"
                               placeholder="Choose file" required />
                    </div>

                    <div class="form-group mt-3 text-right">
                        <button type="submit" class="btn btn-primary" id="btn-create-task">Upload</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>