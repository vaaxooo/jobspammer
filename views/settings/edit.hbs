<div class="docs-content d-flex flex-column flex-column-fluid" id="kt_docs_content">
    <div class="container" id="kt_docs_content_container">
        <form method="post" action="/settings/alias" id="edit-settings">
            <div class="card mb-2 mt-5">
                <div class="card-body fs-6 py-15 px-10 py-lg-15 px-lg-15">
                    <input type="hidden" name="settings_id"
                           id="settings_id" value="{{ settings.id }}" required/>

                    <div class="mb-5">
                        <label for="exampleFormControlInput1" class="required form-label">Input alias</label>
                        <input type="text" class="form-control form-control-solid" name="alias"
                               id="alias"
                               placeholder="Alias" value="{{ settings.alias }}" required/>
                    </div>


                    <div class="mb-5">
                        <label for="exampleFormControlInput1" class="required form-label">Short description</label>
                        <textarea type="text" class="form-control form-control-solid" name="description"
                                  id="description" row="1"
                                  placeholder="Input short description.." required>{{ settings.description }}</textarea>
                    </div>
                    <div class="form-group mt-3 text-right">
                        <button type="submit" class="btn btn-primary" id="btn-edit-settings">Save changes</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>