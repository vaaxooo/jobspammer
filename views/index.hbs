<div class="docs-content d-flex flex-column flex-column-fluid" id="kt_docs_content">
    <!--begin::Container-->
    <div class="container" id="kt_docs_content_container">
        <!--begin::Card-->
        <div class="card mb-2">
            <div class="card-body fs-6 py-15 px-10 py-lg-15 px-lg-15">
                <div class="table-responsive">
                    <table class="table table-striped gy-7 gs-7">
                        <thead>
                        <tr class="fw-bold fs-6 text-gray-800 border-bottom-2 border-gray-200">
                            <th class="min-w-200px">Portal</th>
                            <th class="min-w-400px">Traget link</th>
                            <th class="min-w-200px">Status</th>
                            <th class="min-w-200px">Status Order</th>
                            <th class="min-w-100px">Username</th>
                            <th class="min-w-200px">Lastname</th>
                            <th class="min-w-200px">Password</th>
                            <th class="min-w-200px">E-mail</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each tasks }}
                            <tr id="task-list">
                                <td>{{ alias }}</td>
                                <td>{{ target_link }}</td>
                                {{#if status }}
                                    <td>
                                        <span class="badge badge-light-success fs-7 fw-boldest me-2">Active</span>
                                    </td>
                                {{else}}
                                    <td>
                                        <span class="badge badge-light-danger fs-7 fw-boldest me-2">Not active</span>
                                    </td>
                                {{/if}}
                                {{#if status_order }}
                                    <td>
                                        <span class="badge badge-light-success fs-7 fw-boldest me-2">Done</span>
                                    </td>
                                {{else}}
                                    {{#if status}}
                                        <td>
                                            <span class="badge badge-light-danger fs-7 fw-boldest me-2">Not executed</span>
                                        </td>
                                    {{else}}
                                        <td>
                                            <span class="badge badge-light-success fs-7 fw-boldest me-2">Created</span>
                                        </td>
                                    {{/if}}
                                {{/if}}
                                <td>{{ user_name }}</td>
                                <td>{{ last_name }}</td>
                                <td>{{ password }}</td>
                                <td>{{ email }}</td>
                                {{#if status }}
                                    <td></td>
                                {{else}}
                                    <td>
                                         <button type="button" class="btn btn-sm btn-active-primary" onclick="$.restartTask({{ id }})">Restart</button>
                                    </td>
                                {{/if}}
                            </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>