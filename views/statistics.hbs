<div class="docs-content d-flex flex-column flex-column-fluid" id="kt_docs_content">
    <div class="container" id="kt_docs_content_container">

        <div class="row g-6 g-xl-9">
            <div class="col-lg-6 col-xxl-4">
                <div class="card h-100">
                    <div class="card-body p-9">
                        <div class="fs-2hx fw-boldest">{{ tasks.total }}</div>
                        <div class="fs-4 fw-bold text-gray-400 mb-7">Total tasks</div>
                        <div class="d-flex flex-wrap">
                            <div class="d-flex flex-column justify-content-center flex-row-fluid pe-11 mb-5">
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-primary me-3"></div>
                                    <div class="text-gray-400">Created</div>
                                    <div class="ms-auto fw-boldest text-gray-700">{{ tasks.created.length }}</div>
                                </div>
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-success me-3"></div>
                                    <div class="text-gray-400">Done</div>
                                    <div class="ms-auto fw-boldest text-gray-700">{{ tasks.done.length }}</div>
                                </div>
                                <div class="d-flex fs-6 fw-bold align-items-center">
                                    <div class="bullet bg-danger me-3"></div>
                                    <div class="text-gray-400">Fail</div>
                                    <div class="ms-auto fw-boldest text-gray-700">{{ tasks.fail.length }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-xxl-4">
                <div class="card h-100">
                    <div class="card-body p-9">
                        <div class="fs-2hx fw-boldest">{{ portals.total }}</div>
                        <div class="fs-4 fw-bold text-gray-400 mb-7">Total portals</div>
                        <div class="d-flex flex-wrap">
                            <div class="d-flex flex-column justify-content-center flex-row-fluid pe-11 mb-5">
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-success me-3"></div>
                                    <div class="text-gray-400">Active</div>
                                    <div class="ms-auto fw-boldest text-gray-700">{{ portals.active.length }}</div>
                                </div>
                                <div class="d-flex fs-6 fw-bold align-items-center">
                                    <div class="bullet bg-danger me-3"></div>
                                    <div class="text-gray-400">In active</div>
                                    <div class="ms-auto fw-boldest text-gray-700">{{ portals.in_active.length }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-xxl-4">
                <div class="card h-100">
                    <div class="card-body p-9">
                        <div class="fs-2hx fw-boldest">{{ proxies.total }}</div>
                        <div class="fs-4 fw-bold text-gray-400 mb-7">Total proxies</div>
                        <div class="d-flex flex-wrap">
                            <div class="d-flex flex-column justify-content-center flex-row-fluid pe-11 mb-5">
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-success me-3"></div>
                                    <div class="text-gray-400">Active</div>
                                    <div class="ms-auto fw-boldest text-gray-700">{{ proxies.active.length }}</div>
                                </div>
                                <div class="d-flex fs-6 fw-bold align-items-center">
                                    <div class="bullet bg-danger me-3"></div>
                                    <div class="text-gray-400">In active</div>
                                    <div class="ms-auto fw-boldest text-gray-700">{{ proxies.in_active.length }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row g-6 g-xl-0 mt-5">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Link information</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped gy-7 gs-7">
                        <thead>
                        <tr class="fw-bold fs-6 text-gray-800 border-bottom border-gray-200">
                            <th>Total links</th>
                            <th>Success links</th>
                            <th>Fail links</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{ tasks.total_links }}</td>
                            <td>{{ tasks.send_links }}</td>
                            <td>{{ tasks.fail_links }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


    </div>
</div>